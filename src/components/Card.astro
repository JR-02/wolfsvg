---
import CloudDownloadOutline from "../assets/icons/CloudDownloadOutline.astro";
import CopyOutline from "../assets/icons/CopyOutline.astro";
import GlobeOutline from "../assets/icons/GlobeOutline.astro";

interface Props {
  title: string;
  svg: string;
  category: string;
  pack?: string;
  type?: string;
}

const { title, svg, category, pack, type } = Astro.props;
---

<article
  class="w-44 aspect-square bg-white text-gray-900 flex flex-col items-center justify-center rounded-xl p-3 gap-2"
>
  <img
    class="h-[40%] aspect-square object-fill"
    src={!pack
      ? `/src/assets/svgs/${svg}.svg`
      : `/src/assets/svgs/${pack}/${svg}.svg`}
    alt=""
  />
  <span class="text-sm font-semibold text-gray-500 line-clamp-1 text-center"
    >{title}</span
  >
  <span
    class="text-xs font-semibold text-white line-clamp-1 text-center bg-gray-500 p-1 rounded"
    >{type}</span
  >
  <div>
    <div>
      <button class="text-gray-500 hover:bg-gray-100 p-1 rounded">
        <CopyOutline size={20} />
      </button>
      <button class="text-gray-500 hover:bg-gray-100 p-1 rounded">
        <CloudDownloadOutline size={20} />
      </button>
      <button class="text-gray-500 hover:bg-gray-100 p-1 rounded">
        <GlobeOutline size={20} />
      </button>
    </div>
  </div>
</article>
